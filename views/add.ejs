    <section id="content" class="site-content">
        <form ref='uploadForm' id='uploadForm' action='/upload' class="dropzone" method="post" enctype="multipart/form-data">
            <div class="fallback">
                <input type="file" name="files" multiple />
            </div>
            <div id="file-list-container">
                <!-- 여기에 선택한 파일 목록이 표시됩니다. -->
            </div>
            <input type="text" name="title" placeholder="Enter your title" required>
            <input type='submit' value='Upload!' />
        </form>
    </section>
    <script>
        Dropzone.options.uploadForm = {
            paramName: "files", // 파일 파라미터 이름
            maxFilesize: 10, // 파일 최대 크기 제한 (10MB)
            parallelUploads: 5, // 병렬 업로드 수 (동시에 업로드할 파일 수)
            acceptedFiles: "image/*", // 허용된 파일 유형 (이미지만 허용)
            init: function () {
                this.on("addedfile", function (file) {
                    // 파일이 추가될 때 실행되는 함수
                    // 여기에서 파일 목록을 업데이트할 수 있습니다.
                    const fileListContainer = document.getElementById('file-list-container');
                    const listItem = document.createElement('div');
                    listItem.textContent = file.name;
                    fileListContainer.appendChild(listItem);
                });
            }
        };
    </script>
    

    
    
    
